{% extends('admin_layout.html.twig') %}

{%  block header %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <section>
        <h1>Administration des utilisateurs</h1>
        <div class="container users">
            <div class="row">
                <div class="col">
                    <p class="text-uppercase font-weight-bold">Nom</p>
                </div>
                <div class="col">
                    <p class="text-uppercase font-weight-bold">Pr√©noms</p>
                </div>
                <div class="col">
                    <p class="text-uppercase font-weight-bold">Images</p>
                </div>
                <div class="col">
                    <p class="text-uppercase font-weight-bold">Ajouter une gallerie</p>
                </div>
                <div class="col">
                    <p class="text-uppercase font-weight-bold">Editer</p>
                </div>
            </div>
            {% for user in users %}
                <div class="row no-gutters">
                    <div class="col">
                        <p>{{ user.username }}</p>
                    </div>
                    <div class="col">
                        <p>{{ user.lastName }}</p>
                    </div>
                    <div class="col">
                        {#<p><img src="/images/upload/customers/{{ user.pictureName}}" /></p>#}
                    </div>
                    <div class="col">
                        {% if user.galleries is empty %}
                        <p><a href="{{ path('adminAddGallery', {'id': user.id}) }}">Ajouter</a></p>
                        {% endif %}
                        <p><i class="fa fa-chevron-down show-gallery"></i></p>
                                    {% for gallery in user.galleries %}
                                    <div class="col show-gallery-details">
                                        <a href="{{ path('adminGalleryEdit', {'id': gallery.id}) }}">{{ gallery.benefit.name }}</a>
                                    </div>
                                    {% else %}
                                        <div class="col show-galleries">
                                            <p class="text-center">Aucune galerie</p>
                                        </div>
                                    {% endfor %}
                    </div>
                    <div class="col">
                        <a href="{{ path('adminUserEdit', {'id': user.id}) }}"><i class="fa fa-edit"></i></a>
                    </div>
                </div>
            {% endfor %}
            <div class="row">
                <div class="col add_user">
                    <a href="{{ path('adminRegister') }}">Ajouter un utilisateur</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}