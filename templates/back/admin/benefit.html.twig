{% extends "admin_layout.html.twig" %}

{%  block head %}
    {{ parent() }}
        {% block title %}
            <title>Administration des familles</title>
        {% endblock %}
{% endblock %}

{% block content %}
    <section>
        <div class="container">
            <div class="col">
                <h1>Administration des cat√©gories de prestations</h1>
            </div>
            <div class="row">
                <div class="col">
                    <h2 class="text-uppercase">Prestations actuelles</h2>
                </div>
            </div>
            <div class="row">
                {% if benefits is empty %}
                    <div class="col">Aucune prestation pour le moment</div>
                {% else %}
                <div class="col-6 text-uppercase font-weight-bold">Prestations</div>
                <div class="col text-uppercase font-weight-bold">Modifier</div>
                <div class="col text-uppercase font-weight-bold">Supprimer</div>
                    {% for benefit in benefits %}
                        <div class="col-6">{{ benefit.name }}</div>
                        <div class="col"><i class="fa fa-edit"></i></div>
                        <div class="col"><i class="fa fa-trash"></i></div>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="row">
                <div class="col">
                    <h2>Ajouter une prestation</h2>
                </div>
            </div>
            <div class="row">
                <div class="col benefit-form">
                {{ form_start(benefitType) }}
                        {{ form_row(benefitType.name) }}
                        <button type="submit" class="btn btn-primary submit-form">Enregistrer</button>
                </div>
            {{ form_end(benefitType) }}
            </div>
        </div>
    </section>
{% endblock %}