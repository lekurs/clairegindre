{% extends "back/admin/admin.html.twig" %}

{% block head %}
{{ parent() }}

    {% block title %}
    <title>Edition de la gallerie </title>
    {% endblock %}

{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-12 picture-thumb-container">
            <div class="row no-gutters">
                {{ form_start(form) }}
                {% for images in form.pictures %}
                    {{ form_row(images) }}
                    <img src="{{ asset(images.vars.data.publicPath ~ '/' ~ images.vars.data.pictureName) }}" />
                {% endfor %}
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="{{ asset('js/back/editGallery.js') }}"></script>
<script src="{{ asset('js/back/pictureEdit.js') }}"></script>
{% endblock %}