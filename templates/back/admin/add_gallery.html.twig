{% extends "admin_layout.html.twig" %}

{%  block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles/drop_pictures.css') }}" />
    {% block title %}
        <title>Administration des familles</title>
    {% endblock %}
{% endblock %}

{% block content %}
<section>
    <div class="container">
        <div class="col">
            <h1>Gestion de la galerie : {{ gallery.title }}</h1>
        </div>

        {% if gallery is not empty %}
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <ul id="sortable">
                        {% for pictures in gallery.pictures %}
                            <li class="ui-state-default">
                                <img src="{{ asset(pictures.publicPath ~ '/' ~ pictures.pictureName) }}" alt="{{ pictures.pictureName }}" />
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12" id="drop-container">

            </div>
        </div>
    </div>

</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>$ (function () {
            $('#sortable').sortable();
            $ ('#sortable').disableSelection();
        });</script>
    <script src="/js/back/dropPictures.js"></script>
    <script>$(document).ready(function () {
            $('#drop-container').dropPictures(
                {
                    'script' : '/admin/gallery/pictures/upload',
                    'target': '{{ gallery.title }}',
                    'gallery': '{{ gallery.id }}'
                }
            );
        });
    </script>
{% endblock %}