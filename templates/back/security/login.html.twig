<!DOCTYPE html>
<html lang="fr">
{% block head %}
    <head>
        <meta charset="UTF-8">
        <!-- Use FOUNDATION CSS -->
        {% block stylesheet %}
            <link href="{{ asset('/css/bootstrap.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/global_styles.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/admin.css') }}" rel="stylesheet" />
            <link href="{{ asset('css/styles/login.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/portfolio.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/large_styles.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/medium_styles.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/small_styles.css') }}" rel="stylesheet" />
            <link href="{{ asset('/fonts/font-awesome.min.css') }}" rel="stylesheet">
            <link href="https://fonts.googleapis.com/css?family=Assistant:200,300,400,600,700,800|Quicksand:300,400,500,700" rel="stylesheet">
        {% endblock %}
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Si icone -->
        {#<link rel="icon" type="image/ico" href="/images/ico-livre.ico" />#}
        <!--[if IE]><link rel="shortcut icon" type="image/x-icon" href="images/velo-marqueur.png" /><!-->

        {% block meta %}
            <!-- Création des metatags réseaux sociaux -->
            <!-- Metatags FB -->
            <meta property="og:title" content="Claire GINDRE Photographe" />
            <meta property="og:type" content="Claire GINDRE Photographe" />
            <meta property="og:url" content="clairegindre.mclwebservices.com" />
            <meta property="og:description" content="Claire GINDRE - Photographe" />
            <meta property="og:image" content="/css/images/anlor-nico-header.jpg " />

            <!-- Metatag Twitter -->
            <meta name="twitter:card" content="Claire GINDRE Photographe" />
            <meta name="twitter:tittle" content="Claire GINDRE Photographe" />
            <meta name="twitter:description" content="Claire GINDRE - Photographe" />
        {% endblock %}

        {%  block title %}
            <title>Administration | Connection</title>
        {% endblock %}

    </head>
{% endblock %}

<body>
{% block body %}
    {% block content %}
        <div class="container connection-container">
            <div class="row login-type-container">
                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 offset-xl-4 offset-lg-4">
                    <div class="row login-type-header">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <p>Administration</p>
                        </div>
                    </div>
                    <div class="row login-type-image">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <img src="{{ asset('images/clairegindre.jpeg') }}" alt="claire-gindre" />
                        </div>
                    </div>
                    <div class="row login-type-content-form">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button type="submit" class="btn sub-login">Connexion</button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
    <script src="{{ asset('/js/front/types.js') }}"></script>
{% endblock %}
</body>
</html>