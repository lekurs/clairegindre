{% extends "layout.html.twig" %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles/gallery.css') }}" xmlns="http://www.w3.org/1999/html">

    {% block title %}
        <title>Galeries Clients</title>
    {% endblock %}

{% endblock %}
{% block header %}
    <div class="row no-gutters">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="row justify-content-center no-gutters">
                {% block left_menu %}
                    {{ parent() }}
                {% endblock %}

                {% block logo %}
                    <div class="col-lg-2 col-xl-2 logo-content">
                        <h1><a href="#" class="logo-img-color"></a></h1>
                    </div>
                {% endblock %}

                {% block right_menu %}
                    {{ parent() }}
                {% endblock %}
            </div>
        </div>
    </div>
    <div class="row no-gutters">
        <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-12 gallery-customers-header">
            <img src="{{ asset('images/background/nico_anlor_b&w.jpg') }}" />
        </div>
    </div>
{% endblock %}

{% block content %}
<section>
    <div class="container">
        <div class="row no-gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h1 class="text-center text-uppercase">{{ gallery.title }}</h1>
            </div>
        </div>
            <div class="row no-gutters cards-container">
                {% for pictures in gallery.pictures %}
                <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12 gallery-content-img">
                    <div class="row no-gutters cards-content">
                        <img src="{{ asset(pictures.publicPath ~ '/' ~ pictures.pictureName) }}" alt="{{ pictures.pictureName }}"  class="img-fluid" data-position="{{ pictures.displayOrder }}" data-id="{{ pictures.displayOrder }} "/>
                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 infos-gallery-img">
                                <span data-toggle="modal" data-target="#sliderImg"><button type="button" class="btn"><i class="fa fa-search fa-2x"></i></button></span>
                            </div>
                    </div>
                </div>
                {% endfor %}
                </div>

    {% block contact %}
    {% endblock %}

    {% block instagram_contact %}
    {% endblock %}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="sliderImg" tabindex="-1" role="dialog" aria-labelledby="sliderImgTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document" >
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    {#SLIDER#}
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
                        <ol class="carousel-indicators">
                            {#<li data-target="#carouselExampleIndicators" data-slide-to="{{ gallery.pictures.first.displayOrder }}" class="active"></li>#}
                            {% for pictures in gallery.pictures %}
                                <li data-target="#carouselExampleIndicators" data-slide-to="{{ pictures.displayOrder }}"></li>
                            {% endfor %}
                        </ol>
                        <div class="carousel-inner">
                            {#<div class="carousel-item active">#}
                                {#<img src="{{ asset(gallery.pictures.first.publicPath ~ '/' ~ gallery.pictures.first.pictureName) }}" class="d-block w-100" data-slide="{{ gallery.pictures.first.displayOrder }}" />#}
                            {#</div>#}
                            {#style="width: 50vw !important; height: 50vh !important; =======> style de carousel-item#}
                            {#style="max-width: 100% !important;max-height: 100%;"#}
                            {% for pictures in gallery.pictures %}
                                <div class="carousel-item">
                                    <img src="{{ asset(pictures.publicPath ~ '/' ~ pictures.pictureName) }}" alt="{{ pictures.pictureName }}" class="d-block w-100"  data-slide="{{ pictures.displayOrder }}" />
                                </div>
                            {% endfor %}
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/js/front/menu.js') }}"></script>
    <script src="{{ asset('/js/front/gallery_customers.js') }}"></script>
    <script>
        // $('#sliderImg').modal();
    </script>
{% endblock %}