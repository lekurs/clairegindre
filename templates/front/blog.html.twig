{% extends "layout.html.twig" %}

{% block head %}
{{ parent() }}
    <link href="{{ asset('/css/styles/blog.css') }}" rel="stylesheet" />
    <title>Blog</title>
{% endblock %}

{% block header %}
    <div class="row no-gutters">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
            <div class="row justify-content-center no-gutters">
                {% block left_menu %}
                    {{ parent() }}
                {% endblock %}

                {% block logo %}
                    <div class="col-lg-2 col-xl-2 logo-content">
                        <h1><a href="#" class="logo-img-color"></a></h1>
                    </div>
                {% endblock %}

                {% block right_menu %}
                    {{ parent() }}
                {% endblock %}
            </div>
        </div>
        <div class="row no-gutters">
            <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-12 gallery-customers-header">
                <img src="{{ asset('/images/background/nico_anlor_b&w.jpg') }}" />
            </div>
        </div>
    </div>
{% endblock %}

{% block content %}
<section>
    <div class="container-fluid">
        <div class="row no-gutters">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h2>Vos belles histoires</h2>
                <div class="btn-group col-xl-6 col-lg-6 col-md-6 col-sm-2 col-6 offset-3">
                    <button class="btn btn-default filter-button text-center" data-filter="all">Tout voir</button>
                {% for benefit in benefits %}
                    <button class="btn btn-default filter-button-dynamique" data-filter="{{ benefit.name }}"><img src="{{ asset('/images/interface/pictos/' ~ benefit.name|lower ~ '.png' ) }}" alt="{{ benefit.name }}" class="blog-pictos-filter"> {{ benefit.name }}</button>
                {% endfor %}
                </div>
                <div class="col-xl-10 col-lg-10 col-md-10 col-sm-10 col-10 offset-1">
                    <div class="row no-gutters articles-container">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    {% for article in articles %}
                        <div class="row no-gutters article-container{% if loop.index is divisible by(2) %}-reverse{% endif %}">
                            <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12{% if loop.index is divisible by(2) %} offset-0 {% else %} offset-1{% endif %} article-txt-container">
                                <h2>{{ article.gallery.title }}</h2>
                                <p>{{ article.creationDate | date('d M Y') }}</p>
                                <p>{{ article.title }}</p>
                                <a href="{{ path('showArticle', {'id': article.gallery.id}) }}" class="link_to_gallery">{{ article.personnalButton }}</a>
                            </div>
                            <div class="col-xl-7 col-lg-7 col-md-12 col-sm-12 col-12 {% if loop.index is divisible by(2) %} offset-1{% endif %}">
                                <div class="row no-gutters">
                                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 article-img-container" style="background: url('{{ asset('/images/upload/gallery/' ~ article.gallery.title ~ '/' ~ article.gallery.pictures.first.pictureName) }}') center center; background-size: cover;"></div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('/js/front/menu.js') }}"></script>
{% endblock %}