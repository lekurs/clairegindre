                                    <div class="row no-gutters">
                                        <div class="col-lg-12 col-xl-12">
                                            <ul class="nav justify-content-center">
                                                <li class="nav-item"><a class="nav-link nav-link-bottom" id="nav-link-blog" href="{{ path('blog') }}">Photos</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </nav>
                    {% endblock %}
                    {# LOGO#}
                    {% block logo %}
                        <div class="col-lg-2 col-xl-2 logo-content">
                            <h1><a href="#" class="logo-img"></a></h1>
                        </div>
                    {% endblock %}
                    {# RIGHT MENU #}
                    {% block right_menu %}
                        <nav class="col-lg-5 col-xl-5 right-menu right-menu-index d-none d-md-none d-sm-none d-lg-block d-xl-block" id="end-nav">
                            <div class="row no-gutters justify-content-center align-items-center">
                                <div class="col-lg-6 col-xl-6">
                                    {#ROW RIGHT#}
                                    <div class="row no-gutters nav-border-index">
                                        <div class="col-lg-12 col-xl-12">
                                            <ul class="nav justify-content-between">
                                                <li class="nav-item"><a class="nav-link" id="nav-link-informations" href="{{ path('faq') }}">infos</a></li>
