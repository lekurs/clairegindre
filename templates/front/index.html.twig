                </div>
            </div>
        </div>

        <div class="scroll-down"><i class="fa fa-angle-down angle-bounce-layout fa-4x"></i> </div>

    </header>
{% endblock %}

{% block content %}
    <section class="portfolio">
        <h2 class="text-center text-uppercase title-portfolio">love & fun</h2>

        <div class="gallery">
            {% for gallery in galleries %}
                {% for favoritePicture in gallery.pictures %}
                    {% if favoritePicture.favorite > 0 %}
                        <div class="portfolio-pres thumb" style="background: url({{ asset(favoritePicture.publicPath ~ '/' ~ favoritePicture.pictureName) }}) center center no-repeat; background-size: cover">
                            <a href="{{ path('showArticle', { 'slugArticle': gallery.article.slug, 'slugGallery': gallery.slug }) }}" class="portfolio_link">
                                <div class="link_hover">
                                    <h2 class="title-portfolio-contain">{{ gallery.title }}</h2>
                                    <p class="date-portfolio">{{ gallery.eventDate | date('d-m-Y') }}</p>
                                    <p class="place">{{ gallery.eventPlace }}</p>
                                </div>
                            </a>
                        </div>
                    {% endif %}
                {% endfor %}
            {% endfor %}
        </div>

        </div>
    </section>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
<script src="/js/front/collection_home.js"></script>
<script src="{{ asset('/js/front/portfolio_index.js') }}"></script>
<script src="{{ asset('js/front/menu_layout.js') }}"></script>
{% endblock %}
