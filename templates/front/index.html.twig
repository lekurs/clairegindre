        {# END NAV MOBILE #}

        <div class="row no-gutters">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 header-img">
                <div class="row justify-content-center no-gutters nav-desktop">
                    {% block left_menu %}
                        {# LEFT MENU #}
                        <nav class="col-lg-5 col-xl-5 left-menu left-menu-index d-none d-md-none d-sm-none d-lg-block d-xl-block">
                            <div class="row no-gutters justify-content-center align-items-center">
                                <div class="col-lg-6 col-xl-6">
                                    {#ROW RIGHT#}
                                    <div class="row no-gutters nav-border-index">
                                        <div class="col-lg-12 col-xl-12">
