<!DOCTYPE html>
<html lang="fr">
{% block head %}
<head>
    <meta charset="UTF-8">
    <!-- Use FOUNDATION CSS -->
    {% block stylesheet %}
        <link href="{{ asset('/css/foundation.css') }}" rel="stylesheet" />
        <link href="{{ asset('/css/styles/global_styles.css') }}" rel="stylesheet" />
        <link href="{{ asset('/css/styles/large_styles.css') }}" rel="stylesheet" />
        <link href="{{ asset('/css/styles/medium_styles.css') }}" rel="stylesheet" />
        <link href="{{ asset('/css/styles/small_styles.css') }}" rel="stylesheet" />
        <link href="{{ asset('/fonts/font-awesome.min.css') }}" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Assistant:200,300,400,600,700,800|Quicksand:300,400,500,700" rel="stylesheet">
    {% endblock %}
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Si icone -->
    {#<link rel="icon" type="image/ico" href="/images/ico-livre.ico" />#}
    <!--[if IE]><link rel="shortcut icon" type="image/x-icon" href="images/velo-marqueur.png" /><!-->

    {% block meta %}
        <!-- Création des metatags réseaux sociaux -->
        <!-- Metatags FB -->
        <meta property="og:title" content="Claire GINDRE Photographe" />
        <meta property="og:type" content="Claire GINDRE Photographe" />
        <meta property="og:url" content="clairegindre.mclwebservices.com" />
        <meta property="og:description" content="Claire GINDRE - Photographe" />
        <meta property="og:image" content="/css/images/anlor-nico-header.jpg " />

        <!-- Metatag Twitter -->
        <meta name="twitter:card" content="Claire GINDRE Photographe" />
        <meta name="twitter:tittle" content="Claire GINDRE Photographe" />
        <meta name="twitter:description" content="Claire GINDRE - Photographe" />
    {% endblock %}
    {%  block title %}
        <title>{{ title }}</title>
    {% endblock %}
</head>
{% endblock %}
<body>
{% block body %}
    <div id="main-content">
        {% block mainContent %}
            <header class="grid-x header-img">
                {% block header %}
                    <div class="cell">
                        <!-- DESKTOP MENU -->
                        <nav class="grid-x nav-header">
                            <div class="small-5 medium-5 large-5 cell left-menu">
                                {% block menusLeft %}
                                    {{ include("/front/menus-left.html.twig") }}
                                {% endblock %}
                            </div>
                            <div class="small-12 medium-12 large-2 cell logo-content">
                                <div class="grid-x">
                                    <div class="medium-12 large-12 cell logo-img">
                                        &nbsp;
                                    </div>
                                </div>
                            </div>
                            <div class="small-5 medium-5 large-5 cell right-menu">
                                {% block menusRight %}
                                    {{ include("/front/menus-right.html.twig") }}
                                {% endblock %}
                            </div>
                        </nav>
                    </div>
                            <!-- END DESKTOP MENU -->
                {% endblock %}
            </header>
                    <section class="main-content">
                {% block content %}

                {% endblock %}
                    </section>

                {%  block cloud_word %}
                    <section class="cloud-word">
                        <div class="grid-x">
                            <div class="small-12 large-offset-4 large-4 medium-offset-4 medium-4 cell cloud-words-content">
                                <h4>love and fun</h4>
                                <p class="cloud-words">Faire des nouvelles rencontres / partager / votre bonheur / travailler en s'amusant / offrir de jolis souvenirs / expérimenter et se renouveller à chaque fois / créer de belles images encore et toujours</p>
                            </div>
                        </div>
                    </section>
                {% endblock %}

                {% block contact %}
                    <section class="contact">
                        <div class="grid-x">
                            <div class="small-12 large-12 medium-12 cell contact-triangle">
                                <div class="polygon-absolute"></div>
                                <div class="polygon-triangle-absolute"></div>
                            </div>
                        </div>
                        <div class="grid-x">
                            <div class="small-12 medium-12 large-12 contact-article">
                                <div class="grid-x">
                                    <div class="small-12 medium-4 large-4 contact-content">
                                        <h4>Me contacter</h4>
                                        <p class="contact-mail">contact@clairegindre.com</p>
                                        <p class="contact-phone">06 06 06 06 06</p>
                                    </div>
                                    <div class="small-12 medium-4 large-4 contact-content">
                                        <h4>Me suivre</h4>
                                        <p>Pictos</p>
                                    </div>
                                    <div class="small-12 medium-4 large-4 contact-content">
                                        <h4>Me contacter</h4>
                                        <p class="contact-mail">contact@clairegindre.com</p>
                                        <p class="contact-phone">06 06 06 06 06</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                {% endblock %}


                {% block instagram %}
                    <section class="insta-api">
                        <div class="grid-x">
                            <div class="large-12 medium-12 small-12 cell img_insta-content">
                                {%  for instagram in json %}
                                <a href="{{ instagram.images.standard_resolution.url }}" class="instagram-url"><img src="{{ instagram.images.standard_resolution.url }}" alt="claire_gindre_photographe_{{ instagram.id }}" /></a>
                                {% endfor %}
                            </div>
                        </div>
                    </section>
                {% endblock %}
        {% endblock %}
    </div>
{% endblock %}
    {% block footer %}
<footer class="footer">
    <div class="grid-x">
        <div class="small-11 medium-11 large-11 small-offset-1 medium-offset-1 large-offset-1 cell footer-content">
            <div class="grid-x">
                <div class="small-12 medium-12 large-12 cell footer-contain">
                    <div class="grid-x footer-txt">
                            <div class="small-1 medium-1 large-1 cell arrow"><i class="fa fa-angle-right fa-4x"></i></div>

                        <div class="small-11 medium-11 large-11 cell footer-contain-right">
                            <p>home</p>
                            <p>photos</p>
                            <p>à propos</p>
                            <p>informations</p>
                            <p>contact</p>
                            <p>clients</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
    {% endblock %}
</body>
{% block javascripts %}
    <script src="/js/vendor/jquery-min.js"></script>
    <script src="/js/vendor/foundation.js"></script>
{% endblock %}
</html>