<!DOCTYPE html>
<html lang="fr">
{% block head %}
    <head>
        <meta charset="UTF-8">
        <!-- Use FOUNDATION CSS -->
        {% block stylesheet %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/css?family=Assistant:200,300,400,600,700,800|Playfair+Display:400,700" rel="stylesheet">
            <link href="{{ asset('/css/styles/global_styles.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/portfolio.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/large_styles.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/medium_styles.css') }}" rel="stylesheet" />
            <link href="{{ asset('/css/styles/small_styles.css') }}" rel="stylesheet" />
            <link href="{{ asset("css/bootstrap-datepicker.min.css") }}" rel="stylesheet" />
            <link href="{{ asset('css/styles/checkbox-prettify.css') }}" rel="stylesheet" />
            <link href="{{ asset('fonts/font-awesome.css') }}" rel="stylesheet" />
        {% endblock %}
        <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Si icone -->
        {#<link rel="icon" type="image/ico" href="/images/ico-livre.ico" />#}
        <!--[if IE]><link rel="shortcut icon" type="image/x-icon" href="images/velo-marqueur.png" /><!-->

        {% block meta %}
            <!-- Création des metatags réseaux sociaux -->
            <!-- Metatags FB -->
            <meta property="og:title" content="Claire GINDRE Photographe" />
            <meta property="og:type" content="Claire GINDRE Photographe" />
            <meta property="og:url" content="clairegindre.mclwebservices.com" />
            <meta property="og:description" content="Claire GINDRE - Photographe" />
            <meta property="og:image" content="/css/images/background/mariage-yvelines.jpg " />

            <!-- Metatag Twitter -->
            <meta name="twitter:card" content="Claire GINDRE Photographe" />
            <meta name="twitter:tittle" content="Claire GINDRE Photographe" />
            <meta name="twitter:description" content="Claire GINDRE - Photographe" />
        {% endblock %}

        {%  block title %}
        {% endblock %}
    </head>
{% endblock %}

<body>
    {% block body %}

    {% block FlashMessage %}
        {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ flash_message }}
            </div>
        {% endfor %}
    {% endblock %}

        {% block header %}
            <header>
                {# NAV MOBILE#}
                {% block mobile %}
                <nav class="d-xl-none d-lg-none mobile-nav" role="navigation">
                    <div class="menu">
                        <span class="menu-circle"></span>
                        <a href="#" class="menu-link">
                            <span class="menu-icon">
                                <span class="menu-line menu-line-1"></span>
                                <span class="menu-line menu-line-2"></span>
                                <span class="menu-line menu-line-3"></span>
                            </span>
                        </a>
                    </div>

                    <div class="menu-overlay">
                        <a href="{{ path('index') }}">home</a>
                        <a href="#hello">hello</a>
                        <a href="{{ path('blog') }}">Photos</a>
                        <a href="{{ path('faq') }}">Infos</a>
                        <a href="#contact">Contact</a>
                        <a href="{{ path('galleriesCustomers') }}">Clients</a>
                    </div>
                </nav>
                {% endblock %}
                {# END NAV MOBILE #}

                <div class="row no-gutters">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div class="row justify-content-center no-gutters nav-desktop">
                            {% block left_menu %}
                            {# LEFT MENU #}
                                <nav class="col-lg-5 col-xl-5 right-menu d-none d-md-none d-sm-none d-lg-block d-xl-block">
                                    <div class="row no-gutters justify-content-center align-items-center">
                                        <div class="col-lg-6 col-xl-6">
                                            {#ROW RIGHT#}
                                            <div class="row no-gutters nav-border">
                                                <div class="col-lg-12 col-xl-12">
                                                    <ul class="nav justify-content-between">
                                                        <li class="nav-item"><a class="nav-link" id="nav-link-black-home" href="{{ path('index') }}">Home</a></li>
                                                        <li class="nav-item"><a class="nav-link nav-link-right" id="nav-link-black-hello" href="#hello">Hello</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            {# ROW RIGHT2#}
                                            <div class="row no-gutters">
                                                <div class="col-lg-12 col-xl-12">
                                                    <ul class="nav justify-content-center">
                                                        <li class="nav-item"><a class="nav-link nav-link-bottom" id="nav-link-black-blog" href="{{ path('blog') }}">Photos</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </nav>
                            {% endblock %}
                            {# LOGO#}
                            {% block logo %}
                            <div class="col-lg-2 col-xl-2 logo-content">
                                <h1><a href="{{ path('index') }}" class="logo-img-color"></a></h1>
                            </div>
                            {% endblock %}
                            {# RIGHT MENU #}
                            {% block right_menu %}
                            <nav class="col-lg-5 col-xl-5 right-menu d-none d-md-none d-sm-none d-lg-block d-xl-block" id="end-nav">
                                <div class="row no-gutters justify-content-center align-items-center">
                                    <div class="col-lg-6 col-xl-6">
                                        {#ROW RIGHT#}
                                        <div class="row no-gutters nav-border">
                                            <div class="col-lg-12 col-xl-12">
                                                <ul class="nav justify-content-between">
                                                    <li class="nav-item"><a class="nav-link" id="nav-link-black-informations" href="{{ path('faq') }}">infos</a></li>
                                                    <li class="nav-item"><a class="nav-link nav-link-right" id="nav-link-black-customer" href="{{ path('galleriesCustomers') }}">clients</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        {# ROW RIGHT2#}
                                        <div class="row no-gutters">
                                            <div class="col-lg-12 col-xl-12">
                                                <ul class="nav justify-content-center">
                                                    <li class="nav-item"><a class="nav-link nav-link-bottom" id="nav-link-black-contact" href="#contact">contact</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </nav>
                            <div class="row no-gutters social-container">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <p><a href="https://www.instagram.com/clairegindre_photographe/" target="_blank"><i class="fa fa-instagram"></i></a></p>
                                    <p><a href="https://www.facebook.com/clairegindre.pg/" target="_blank"><i class="fa fa-facebook-f"></i></a></p>
                                    <p><a href="https://www.pinterest.fr/ClaireGindrepg/" target="_blank"><i class="fa fa-pinterest-p"></i></a></p>
                                </div>
                            </div>
                            {% endblock %}
                        </div>
                </div>
            </div>

            </header>
        {% endblock %}

    {% block content %}

    {% endblock %}

    {% block presentation %}
        <section class="presentations" id="hello">
            <div class="row no-gutters height-pres">
                <div class="col-12 col-sm-12 col-md-12 offset-lg-3 offset-xl-3 col-lg-6 col-xl-6 hello-container align-items-center justify-content-center">
                    <div class="row no-gutters">
                        <div class="offset-lg-3 offset-xl-3 col-lg-9 col-xl-9 presentation-container">
                            <h2 class="text-left text-uppercase">hello !</h2>
                            <p id="presentation-txt">
                                Je suis Claire Gindre, j'ai deux amours, le graphisme et la photographie. Graphiste depuis presque toujours, la photographie est arrivée un peu plus tard dans ma vie à travers un boîtier Argentique. Depuis je n'ai plus quitté mon boîtier.
                                Au delà du côté créatif, ce qui me plait enormément c'est d'aller à la rencontre de nouvelles personnes et de pouvoir immortaliser de belles histoires pour en laisser un souvenir intérissable.
                            </p>
                        </div>
                    </div>
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 photo-presentations"></div>
                </div>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 bg-presentations"></div>
            </div>
        </section>
    {% endblock %}

    {% block contact %}
        <section class="contact" id="contact">
            <div class="row no-gutters">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 contact-article">
                    <div class="row no-gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <p class="text-center triple-triangle"><img src="{{ asset('/images/interface/pictos/trois-triangle.png') }}" alt="contact-clairegindre" /></p>
                        </div>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h2 class="text-uppercase text-center">contact</h2>
                        </div>
                    </div>

                    {% form_theme contact "form/contactForm/contact_form.html.twig" %}
                    {{ form(contact) }}

                </div>
            </div>
        </section>
    {% endblock %}

    {% block instagram_contact %}
    <section class="row no-gutters">
        <article class="col-lg-6 col-xl-6 col-md-12 col-sm-12 col-12 instagram insta-list">
                {%  for instagram in insta %}
                    {#<a href="{{ instagram.link }}" class="instagram-link">#}
                        <img class="insta-img" src="{{ instagram.images.standard_resolution.url }}" alt="claire_gindre_photographe_{{ instagram.id }}" />
                    {#</a>#}
                {% endfor %}
            <div class="insta-logo"> <a href="https://www.instagram.com/clairegindre_photographe/" target="_blank">Instagram</a></div>
        </article>

        <article class="col-12 col-sm-12 col-lg-6 col-xl-6 contact">
            {# SLIDER COMMENT#}
            <div id="slider-comment" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    {% for key, review in reviews %}
                    <div class="carousel-item carousel-img {{ key == 0 ? "active" : '' }}">
                        <img src="{{ asset(review.imagePath ~ '/' ~ review.imageName) }}" class="d-block w-100 img-carousel" alt="test_slider" />
                        <div class="infos-carousel">
                            <h3 class="text-uppercase carousel-title">{{ review.title }}</h3>
                            {{ review.content|raw }}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </article>
    </section>
    {% endblock %}

    {% block footer %}
        <footer class="row no-gutters">
            <div class="col-xl-1 col-lg-1 col-md-12 col-sm-12 col-12 arrow-footer d-sm-none d-md-none d-xl-block d-lg-block">
                <img src="{{ asset('images/interface/pictos/FLECHE.png') }}" alt="arrow" />
            </div>
            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                <div class="row no-gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <a href="{{ path('index') }}" class="nav-footer" id="link-home">home</a>
                        <a href="#hello" class="nav-footer" id="link-photo">Hello</a>
                        <a href="{{ path('blog') }}" class="nav-footer" id="link-blog">Photos</a>
                        <a href="{{ path('faq') }}" class="nav-footer" id="link-informations">Infos</a>
                        <a href="{{ path('galleriesCustomers') }}" class="nav-footer" id="link-customers">clients</a>
                        <a href="#contact" class="nav-footer" id="link-contact">contact</a>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12 contact-footer">
                <p><strong>Claire Gindre</strong></p>
                <p>contact@clairegindre.com</p>
                <p>06 62 45 10 36</p>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="row no-gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <p class="text-uppercase" id="follow-me">Suivez-moi sur : </p>
                    </div>
                </div>
                <div class="row no-gutters" id="social-footer-container-mobile">
                    <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 social-footer-container">
                        <a href="https://www.instagram.com/clairegindre_photographe/" target="_blank"><i class="fa fa-instagram social-picto-footer"></i></a>
                        <a href="https://www.facebook.com/clairegindre.pg/" target="_blank"><i class="fa fa-facebook-f social-picto-footer"></i></a>
                        <a href="https://www.pinterest.fr/ClaireGindrepg/" target="_blank"><i class="fa fa-pinterest-p social-picto-footer"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <p class="text-uppercase mentions-link"><span data-toggle="modal" data-target="#showMentionsModal" >mentions légales</span></p>
                <p>Tous droits réservés <i class="fa fa-copyright"></i> <strong>Claire GINDRE - 2018</strong></p>
            </div>
        </footer>
    {% endblock %}

    <!-- MODAL MENTIONS -->
    <div class="modal fade" id="showMentionsModal" tabindex="-1" role="dialog" aria-labelledby="ShowMentionsModalTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-mentions" id="ShowMentionsModalTitle">Mentions légales</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                {{ include('front/mentions-legales.html.twig') }}
            </div>
        </div>
    </div>

</body>

{% block javascripts %}
    <script src="{{ asset('js/vendor/jquery-min.js') }}"></script>
    <script src="{{ asset('js/vendor/bootstrap.bundle.js') }}"></script>
    <script src="{{ asset('js/vendor/materialize.js') }}"></script>
    <script src="{{ asset('/js/front/types.js') }}"></script>
    <script src="{{ asset('js/front/nav-mobile.js') }}"></script>
    <script src="{{ asset("js/front/bootstrap-datepicker.min.js") }}"></script>
    <script src="{{ asset ('js/front/bootstrap-datepicker.fr.min.js') }}"></script>
    <script>$('#datepicker').datepicker({
            language: 'fr',
            format: 'yyyy-mm-dd'
    })</script>
<script>
    $('#datepicker').on('changeDate',function(e){
        $(this).datepicker('hide');
    });
</script>
<script src="{{ asset('js/front/checkbox-prettify.js') }}"></script>
<script>
    $(".mycheckbox").checkboxPrettify(".mycheckbox", {colorselected:'#000000', colordefault:"#242424"});
    $(".mycheckbox2").checkboxPrettify(".mycheckbox2");
</script>
{% endblock %}

{% endblock %}
</html>