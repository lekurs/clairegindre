        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Si icone -->
        {#<link rel="icon" type="image/ico" href="/images/ico-livre.ico" />#}
        <!--[if IE]><link rel="shortcut icon" type="image/x-icon" href="images/velo-marqueur.png" /><!-->

        {% block meta %}
            <!-- Création des metatags réseaux sociaux -->
            <!-- Metatags FB -->
            <meta property="og:title" content="Claire GINDRE Photographe" />
            <meta property="og:type" content="Claire GINDRE Photographe" />
            <meta property="og:url" content="clairegindre.mclwebservices.com" />
            <meta property="og:description" content="Claire GINDRE - Photographe" />
            <meta property="og:image" content="/css/images/anlor-nico-header.jpg " />

            <!-- Metatag Twitter -->
            <meta name="twitter:card" content="Claire GINDRE Photographe" />
            <meta name="twitter:tittle" content="Claire GINDRE Photographe" />
            <meta name="twitter:description" content="Claire GINDRE - Photographe" />
        {% endblock %}

        {%  block title %}
        {% endblock %}
    </head>
{% endblock %}

<body>
    {% block body %}
        {% block FlashMessage %}
            {% for flash_message in app.flashes('contact_success') %}
                <div class="alert alert-success">
                    {{ flash_message }}
                </div>
            {% endfor %}
            {% for flash_message in app.session.flashBag.get('contact_error') %}
                <div class="alert alert-warning">
                    {{ flash_message }}
                </div>
            {% endfor %}
        {% endblock %}
        {% block header %}
            <header>
                {# NAV MOBILE#}
                <nav class="d-xl-none d-lg-none mobile-nav" role="navigation">
                    <div class="menu">
                        <span class="menu-circle"></span>
                        <a href="#" class="menu-link">
                            <span class="menu-icon">
                                <span class="menu-line menu-line-1"></span>
                                <span class="menu-line menu-line-2"></span>
                                <span class="menu-line menu-line-3"></span>
                            </span>
                        </a>
                    </div>

                    <div class="menu-overlay">
                        <a href="{{ path('index') }}">home</a>
                        <a href="#hello">hello</a>
                        <a href="{{ path('blog') }}">blog</a>
                        <a href="{{ path('faq') }}">Informations</a>
                        <a href="#contact">Contact</a>
                        <a href="{{ path('galleriesCustomers') }}">Clients</a>
                    </div>
                </nav>
                {# END NAV MOBILE #}

                <div class="row no-gutters">
                    <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 header-img">
                        <div class="row justify-content-center no-gutters nav-desktop">
                            {% block left_menu %}
                            {# LEFT MENU #}
                                <nav class="col-lg-5 col-xl-5 right-menu d-none d-md-none d-sm-none d-lg-block d-xl-block">
                                    <div class="row no-gutters justify-content-center align-items-center">
                                        <div class="col-lg-6 col-xl-6">
                                            {#ROW RIGHT#}
                                            <div class="row no-gutters nav-border">
                                                <div class="col-lg-12 col-xl-12">
                                                    <ul class="nav justify-content-between">
                                                        <li class="nav-item"><a class="nav-link" id="nav-link-home" href="{{ path('index') }}">Home</a></li>
                                                        <li class="nav-item"><a class="nav-link nav-link-right" id="nav-link-hello" href="#hello">Hello</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            {# ROW RIGHT2#}
                                            <div class="row no-gutters">
                                                <div class="col-lg-12 col-xl-12">
                                                    <ul class="nav justify-content-center">
                                                        <li class="nav-item"><a class="nav-link nav-link-bottom" id="nav-link-blog" href="{{ path('blog') }}">Blog</a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </nav>
                            {% endblock %}
                            {# LOGO#}
                            {% block logo %}
                            <div class="col-lg-2 col-xl-2 logo-content">
                                <h1><a href="#" class="logo-img"></a></h1>
                            </div>
                            {% endblock %}
                            {# RIGHT MENU #}
                            {% block right_menu %}
                            <nav class="col-lg-5 col-xl-5 right-menu d-none d-md-none d-sm-none d-lg-block d-xl-block" id="end-nav">
                                <div class="row no-gutters justify-content-center align-items-center">
                                    <div class="col-lg-6 col-xl-6">
                                        {#ROW RIGHT#}
                                        <div class="row no-gutters nav-border">
                                            <div class="col-lg-12 col-xl-12">
                                                <ul class="nav justify-content-between">
                                                    <li class="nav-item"><a class="nav-link" id="nav-link-informations" href="{{ path('faq') }}">informations</a></li>
                                                    <li class="nav-item"><a class="nav-link nav-link-right" id="nav-link-customer" href="{{ path('galleriesCustomers') }}">clients</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        {# ROW RIGHT2#}
                                        <div class="row no-gutters">
                                            <div class="col-lg-12 col-xl-12">
                                                <ul class="nav justify-content-center">
                                                    <li class="nav-item"><a class="nav-link nav-link-bottom" id="nav-link-contact" href="#contact">contact</a></li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </nav>
                            <div class="row no-gutters social-container">
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <p><a href="https://www.instagram.com/clairegindre_photographe/" target="_blank"><i class="fa fa-instagram"></i></a></p>
                                    <p><a href="https://www.facebook.com/clairegindre.pg/" target="_blank"><i class="fa fa-facebook-f"></i></a></p>
                                    <p><a href="https://www.pinterest.fr/ClaireGindrepg/" target="_blank"><i class="fa fa-pinterest-p"></i></a></p>
                                </div>
                            </div>
                            {% endblock %}
                        </div>
                </div>
            </div>

            <div class="scroll-down"><i class="fa fa-angle-down angle-bounce-layout fa-4x"></i> </div>

            </header>
        {% endblock %}

    {% block content %}

    {% endblock %}

    {% block presentation %}
        <section class="presentations" id="hello">
            <div class="row no-gutters height-pres">
                <div class="col-12 col-sm-12 col-md-12 offset-lg-3 offset-xl-3 col-lg-6 col-xl-6 hello-container align-items-center justify-content-center">
                    <div class="row no-gutters">
                        <div class="offset-lg-3 offset-xl-3 col-lg-9 col-xl-9 presentation-container">
                            <h2 class="text-left text-uppercase">hello !</h2>
                            <p id="presentation-txt">Je s'appelle Groot, photographe en région parisienne ....</p>
                        </div>
                    </div>
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 photo-presentations"></div>
                </div>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 bg-presentations"></div>
            </div>
        </section>
    {% endblock %}

    {% block contact %}
        <section class="contact" id="contact">
            </div>
            <div class="row no-gutters">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12 contact-article">
                    <div class="row no-gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <p class="text-center triple-triangle"><img src="{{ asset('/images/interface/pictos/trois-triangle.png') }}" alt="contact-clairegindre" /></p>
                        </div>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                            <h2 class="text-uppercase text-center">contact</h2>
                        </div>
                    </div>

                    {{ form_start(contact) }}

                    <div class="row no-gutters">
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                            <div class="row no-gutters">
                                <div class="col-12 d-flex justify-content-center input-content">
                                    {{ form_label(contact.name) }}
                                    {{ form_widget(contact.name, {'attr': {'class': 'contact-form' }}) }}
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-12 d-flex justify-content-center input-content">
                                    {{ form_label(contact.firstname) }}
                                    {{ form_widget(contact.firstname, {'attr': {'class': 'contact-form' }}) }}
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-12 d-flex justify-content-center input-content">
                                    {{ form_label(contact.email) }}
                                    {{ form_widget(contact.email, {'attr': { 'class': 'contact-form' }}) }}
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-12 d-flex justify-content-center input-content">
                                    {{ form_label(contact.phone) }}
                                    {{ form_widget(contact.phone, {'attr': {'class': 'contact-form' }}) }}
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                            <div class="row no-gutters">
                                <div class="col-12 d-flex justify-content-center input-content">
                                    {{ form_widget(contact.date, {'attr': {'class': 'contact-form'}}) }}
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-12 d-flex justify-content-center input-content">
                                    {{ form_label(contact.place) }}
                                    {{ form_widget(contact.place, {'attr': {'class': 'contact-form' }}) }}
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-12 d-flex justify-content-center input-content">
                                    {{ form_label(contact.howKnow) }}
                                    {{ form_widget(contact.howKnow, {'attr': {'class': 'contact-form' }}) }}
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-12">
                                    <p class="text-center">Vous êtes intéréssés pour :</p>
                                </div>
                            </div>
                            <div class="row no-gutters">
                                <div class="col-4 d-flex justify-content-center text-uppercase">
                                    {{ form_label(contact.event) }}
                                    {{ form_widget(contact.event) }}
                                </div>
                                <div class="col-4 d-flex justify-content-center text-uppercase">
                                    {{ form_label(contact.eventCouple) }}
                                    {{ form_widget(contact.eventCouple) }}
                                </div>
                                <div class="col-4 d-flex justify-content-center text-uppercase">
                                    {{ form_label(contact.eventFamily) }}
                                    {{ form_widget(contact.eventFamily) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-12 d-flex justify-content-center">
                            {{ form_widget(contact.details, {'attr': {'placeholder': 'Tous les détails de votre évènement m\'intéresse, le style de votre mariage, le nombre d\'invités, le type de cérémonie ...', 'class': 'contact-form' }}) }}
                        </div>
                    </div>
                    <div class="row no-gutters">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 btn-contact">
                            <button type="submit" name="contact-submit" class="btn sub-contact">Envoyer</button>
                        </div>
                    </div>

                    {{ form_end(contact) }}

                </div>
            </div>
        </section>
    {% endblock %}

    {% block instagram_contact %}
    <section class="row no-gutters">
        <article class="col-lg-6 col-xl-6 col-md-12 col-sm-12 col-12 instagram insta-list">
                {%  for instagram in insta %}
                    {#<a href="{{ instagram.link }}" class="instagram-link">#}
                        <img class="insta-img" src="{{ instagram.images.standard_resolution.url }}" alt="claire_gindre_photographe_{{ instagram.id }}" />
                    {#</a>#}
                {% endfor %}
            <div class="insta-logo">Instagram</div>
        </article>

        <article class="col-12 col-sm-12 col-lg-6 col-xl-6 contact">
            {# SLIDER COMMENT#}
            <div id="slider-comment" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active carousel-img">
                        <img src="{{ asset('/images/contact-img.jpg') }}" class="d-block w-100 img-carousel" alt="test_slider" />
                        <div class="infos-carousel">
                            <h3 class="text-uppercase carousel-title">test</h3>
                            <p>test de paragraphe test de paragraphe test de paragraphe test de paragraphe test de paragraphe test de paragraphe</p>
                        </div>
                    </div>
                    {% for review in reviews %}
                    <div class="carousel-item carousel-img">
                        <img src="{{ asset(review.imagePath ~ '/' ~ review.imageName) }}" class="d-block w-100 img-carousel" alt="test_slider" />
                        <div class="infos-carousel">
                            <h3 class="text-uppercase carousel-title">{{ review.title }}</h3>
                            {{ review.content|raw }}
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </article>
    </section>
    {% endblock %}

    {% block footer %}
        <footer class="row no-gutters">
            <div class="col-xl-1 col-lg-1 col-md-12 col-sm-12 col-12 arrow-footer">
                <img src="{{ asset('images/interface/pictos/fleche.png') }}" alt="arrow" />
            </div>
            <div class="col-xl-2 col-lg-2 col-md-12 col-sm-12 col-12">
                <div class="row no-gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <a href="{{ path('index') }}" class="nav-footer" id="link-home">home</a>
                        <a href="#hello" class="nav-footer" id="link-photo">Hello</a>
                        <a href="{{ path('blog') }}" class="nav-footer" id="link-blog">Blog</a>
                        <a href="{{ path('faq') }}" class="nav-footer" id="link-informations">Informations</a>
                        <a href="{{ path('galleriesCustomers') }}" class="nav-footer" id="link-customers">clients</a>
                        <a href="#contact" class="nav-footer" id="link-contact">contact</a>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <p><strong>Claire Gindre</strong></p>
                <p>contact@clairegindre.com</p>
                <p>06 62 45 10 36</p>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="row no-gutters">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                        <p class="text-uppercase" id="follow-me">Suivez-moi</p>
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
                        <a href="https://www.instagram.com/clairegindre_photographe/" target="_blank"><i class="fa fa-instagram social-picto-footer"></i></a>
                        <a href="https://www.facebook.com/clairegindre.pg/" target="_blank"><i class="fa fa-facebook-f social-picto-footer"></i></a>
                        <a href="https://www.pinterest.fr/ClaireGindrepg/" target="_blank"><i class="fa fa-pinterest-p social-picto-footer"></i></a>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <p class="text-uppercase">mentions légales</p>
                <p>Tous droits réservés <i class="fa fa-copyright"></i> <strong>Claire GINDRE - 2018</strong></p>
            </div>
        </footer>
    {% endblock %}
</body>

