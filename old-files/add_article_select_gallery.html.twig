{% extends "admin_layout.html.twig" %}

{%  block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/styles/blog.css') }}" />
    <title>Administration</title>
{% endblock %}

{% block content %}
    {% block FlashMessage %}
        {% for flash_message in app.flashes('register_success') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}
        {% for flash_message in app.flashes('user_delete_success') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}
    {% endblock %}

    {% block showBlog %}
        <div class="container">
            <h1>Choix de la galerie</h1>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    {{ form_start(form) }}
                    {{ form_row(form) }}
                    <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-2 offset-5">
                        <a href="{{ path('adminAddArticleSelectPictures', {'id': form.vars.id}) }}" class="next-add-article-link"><i class="fa fa-arrow-circle-o-right fa-3x link-article"></i> </a>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 circle-container">
                    <div class="line"></div>
                    <div class="cercle active">1</div>
                    <div class="cercle">2</div>
                    <div class="cercle">3</div>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
{% endblock %}