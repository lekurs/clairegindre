<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Entity\Category" table="clairegindre_category" repository-class="App\Repository\CategoryRepository">
        <id name="id" column="id" type="string"/>
        <field name="date" type="date" nullable="false" unique="false" />
        <field name="title" type="string" length="150" nullable="false" unique="false" />
        <field name="online" type="boolean" nullable="false" unique="false" />

        <one-to-many field="articles" target-entity="App\Entity\Article" mapped-by="categories" />
        <one-to-many field="benefits" target-entity="App\Entity\Benefit" mapped-by="category">
            <!--<cascade>-->
                <!--<cascade-persist/>-->
            <!--</cascade>-->
        </one-to-many>
    </entity>

</doctrine-mapping>