<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Entity\Reviews" table="clairegindre_reviews" repository-class="App\Repository\ReviewsRepository">
        <id name="id" column="id" type="string"/>

        <many-to-one field="article" target-entity="App\Entity\Article" inversed-by="reviews" />
        <many-to-one field="author" target-entity="App\Entity\User" inversed-by="reviews" />
    </entity>

</doctrine-mapping>