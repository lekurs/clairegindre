<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\GalleryPage" table="clairegindre_gallery_page" repository-class="App\Domain\Repository\GalleryPageRepository">
            <id name="id" type="string" column="id" />
                <field name="line" type="integer" nullable="false" unique="false" />
                <field name="displayOrder" type="integer" nullable="false" unique="false" />

        <one-to-many field="images" target-entity="App\Domain\Models\Picture" mapped-by="galleryPage" orphan-removal="true">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-one field="article" target-entity="App\Domain\Models\Article" />
    </entity>
</doctrine-mapping>