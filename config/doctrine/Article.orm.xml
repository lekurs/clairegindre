<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Entity\Article" table="clairegindre_article" repository-class="App\Repository\ArticleRepository">
        <id name="id" column="id" type="string"/>

        <many-to-one field="author" target-entity="App\Entity\User" inversed-by="articles" />
        <one-to-many field="reviews" target-entity="App\Entity\Reviews" mapped-by="article" />
        <one-to-many field="images" target-entity="App\Entity\Picture" mapped-by="article" />
        <many-to-one field="categories" target-entity="App\Entity\Category" inversed-by="articles" />
    </entity>

</doctrine-mapping>