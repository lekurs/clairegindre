<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="App\Domain\Models\Article" table="clairegindre_article" repository-class="App\Domain\Repository\ArticleRepository">
        <id name="id" column="id" type="string"/>
        <field name="prestation" type="string" length="10" nullable="false" unique="false" />
        <field name="title" type="string" length="100" nullable="false" unique="true" />
        <field name="content" type="text" nullable="false" unique="false" />
        <field name="creationDate" type="integer" nullable="false" unique="true" />
        <field name="modificationDate" type="integer" nullable="true" unique="true" />

        <many-to-one field="author" target-entity="App\Domain\Models\User" inversed-by="articles" />
        <one-to-many field="images" target-entity="App\Domain\Models\Article" mapped-by="article" />
        <one-to-many field="comments" target-entity="App\Domain\Models\Comment" mapped-by="article" />
        <one-to-one field="gallery" target-entity="App\Domain\Models\Gallery">
            <join-column name="gallery_id" referenced-column-name="id" />
        </one-to-one>
    </entity>

</doctrine-mapping>